<Window x:Class="Template4438.SharafetdinovWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template4438"
        mc:Ignorable="d"
        Title="SharafetdinovWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="25"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock Text="Информация об авторе"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ФИО: Шарафетдинов Никита Альбертович"/>
            <TextBlock Text="Возраст: 19"/>
        </StackPanel>
        <Button x:Name="ImportBtn" Content="Импорт данных" HorizontalAlignment="Left" VerticalAlignment="Top" Height="70" Width="250" Click="ImportBtn_Click"/>
        <Button x:Name="ExportBtn" Content="Экспорт в Excel" HorizontalAlignment="Right" VerticalAlignment="Top" Height="70" Width="250" Click="ExportBtn_Click"/>
    </Grid>
</Window>
