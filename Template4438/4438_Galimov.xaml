<Window x:Class="Template4438._4438_Galimov"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template4438"
        mc:Ignorable="d"
        Title="_4438_Galimov" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Margin="0,40,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock TextWrapping="Wrap" Text="Информация об авторе" FontSize="28" />
                <TextBlock TextWrapping="Wrap" Text="Имя: Рустем" FontSize="24" />
                <TextBlock TextWrapping="Wrap" Text="Возраст: 19" FontSize="24" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 50 0 0">
                <Button Content="Импорт данных" x:Name="importBtn" Click="importBtn_Click"></Button>
                <Button Content="Экспорт данных" x:Name="exportBtn" Margin="10 0 0 0" Click="exportBtn_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
